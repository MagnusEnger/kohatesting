set -e

usage="Usage: $0 [--configfile /path/to/config] bugnumber"

die() {
    echo "$@" 1>&2
    exit 1
}

# Set defaults and read config file, if it exists.
KOHACLONE="~/kohaclone"
TMPDIR="/tmp/"
DBNAME="koha"
DBUSER="kohaadmin"
DBHOST="localhost"
DBPASS="katikoan"

[ $# -ge 1 ] && [ $# -le 3 ] || die $usage

TEMP=`getopt -o c: -l configfile: \
     -n "$0" -- "$@"`

# Note the quotes around `$TEMP': they are essential!
eval set -- "$TEMP"

while true ; do
	case "$1" in
		-c|--configfile) configfile="$2" ; shift 2 ;;
		--) shift ; break ;;
		*) die "Internal error processing command line arguments" ;;
	esac
done

# Load the configfile given on the command line
if [ "$configfile" != "" ]
then
    if [ -e "$configfile" ]
    then
        . "$configfile"
    else
        die "$configfile does not exist.";
    fi
fi

# Get the bug number
bugnumber="$1"

# Say what we are going to do
cat <<eoh
Going to test bug number $bugnumber with the following parameters:
Koha directory:    $KOHACLONE
Temporary files:   $TMPDIR
Database name:     $DBNAME
Database user:     $DBUSER
Database host:     $DBHOST
Database password: ***
eoh

# Update the code and the database
cd $KOHACLONE
git pull
perl installer/data/mysql/updatedatabase.pl

# TODO Backup database
# mysqldump --host="$DBHOST" --user="$DBUSER" --password="$DBPASS" "$DBNAME"

# TODO Create a branch to test in

# TODO Use git bz to get patches? 

# Let the user choose to run Koha's tests
while true; do
    read -p "Do you wish to run Koha's test suite? (yes/no) " yn
    case $yn in
        [Yy]* ) prove; break;;
        [Nn]* ) break;;
        * ) echo "Please answer yes or no.";;
    esac
done

# TODO Sign off on patch(es)
# TODO Remove any files created during testing 
# TODO Restore database
